<div id="add-addition-form">
  <h2>Add addition</h2>
  <%= form_for @addition , :html => {:class => "span8 offset1"} do |f| %>
    <div class = "field"/>
      <%= f.text_area :content, :rows=>10, :class => "span8", :placeholder => "Continue the story here..." %>
    </div>

    <%= hidden_field_tag(:story_id, @story.id) %>

    <div class="actions">
      <%= f.submit %>
    </div>
  <%end%>
</div>