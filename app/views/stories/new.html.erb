<% if current_user %>

  <%= form_for(@story) do |f| %>
    <div class = "field"/>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class = "field"/>
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
    <%end%>

<% else %>

<h2>Please log in to add a story.</h2>

<% end %>


